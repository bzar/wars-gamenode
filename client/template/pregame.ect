<% extend 'base.ect' %>

<% block 'head' : %>
<link rel="stylesheet" type="text/css" href="pregame.css">
<script data-main="pregame" src="lib/require.js"></script>
<% end %>

<% block 'menubar' : %>
<% end %>

<h2>Pregame - <span id="gameName"></span></h2>
<div id="tools">
  <div id="gameInfo">
    <table id="players"></table>
  </div>

  <div id="authorTools" class="navigation">
    <form id="inviteForm" class="toolForm">
      <select id="username" name="username"/>
      <input type="submit" value="Invite bot"/>
    </form>
    <a id="startGame" class="actionButton" href="#">Start game</a>
    <a id="deleteGame" class="actionButton" href="#">Delete game</a>
  <form id="banUnits">
    <select id="notBannedUnits" multiple>
    </select>
    <input id="banUnit" type="submit" value=">"/>
    <input id="removeFromBannedUnits" type="submit" value="<"/>
    <select id="bannedUnits" multiple>
    </select>
  </form>

  </div>

  <div id="chat">
    <ul id="chatMessages"><li>Welcome to pregame chat!</li></ul>
    <form id="chatForm">
      <input id="chatInput" type="text" value=""/><input id="chatSubmit" type="submit" value="send"/>
    </form>
  </div>
</div>

<div id="mapPreview">
  <canvas id="mapCanvas"></canvas>
</div>
